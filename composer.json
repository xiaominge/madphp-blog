{
    "name": "madphp/madphp",
    "description": "Madphp is a simple PHP framework based on composer.",
    "keywords": ["framework", "madphp", "php"],
    "license": "MIT",

    "require": {
        "madphp/src": "dev-master",
        "michelf/php-markdown": "1.4.0"
    },

    "autoload": {
        "classmap": [
            "app/libraries",
            "app/controllers",
            "app/models"
        ]
    },

    "config": {
        "preferred-install": "dist"
    },
    
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/xiaominge/madphp-src.git"
        },
        {
            "type": "git",
            "url": "https://github.com/michelf/php-markdown.git"
        },
        
        {"packagist": false}
    ]
}
